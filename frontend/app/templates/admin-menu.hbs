<main class='wholeadmin'>
  <form class='menuadmin' {{action 'createMenuItem' on="submit" }}>
    <h2>Name:</h2>
    {{input type="text" class='i' value=name placeholder="enter the item name"}}
    <h2>Price:</h2>
    {{input type="number" class='i' value=price placeholder="enter the item price"}}
    <h2>Description:</h2>
    {{input type="string" class='i' value=description placeholder="something about the item"}}
    <h2><button class='hovbutton' type="submit">Add the item to the list</button></h2>
  </form>
  <h2>{{#link-to 'index'}}<button class='BTN3' type="button">
      Home</button>{{/link-to}}</h2>
  <div class="adminmenu">
    <tr class="admincolumnname">
      <th class="admincolumn1">Menu </th>
      <th class="admincolumn2">Price </th>
    </tr>
    {{#each model.menu_itemss as | menu_item |}}
    <tr>
      {{#if menu_item.name}}
      <td class='adminitemname'>{{ menu_item.name }}</td>
      <td class='adminitemprice'>{{ menu_item.price }}</td>
      <td><button class="deletemenu" type="submit" {{ action 'deleteMenuItem' menu_item.id }}>Delete</button></td>
      {{/if}}
    </tr>
    {{/each}}
  </div>
</main>
